{
	"name": "nodeAuthServer",
	"version": "0.0.2",
	"description": "Node | Postgres | GraphQL server with auth",
	"main": "index.js",
	"engines": {
		"node": ">= 8.4.0",
		"npm": ">=4.0.0",
		"yarn": ">=1.2.0"
	},
	"author": "Tan Guven",
	"license": "MIT",
	"devDependencies": {
		"ava": "^0.25.0",
		"babel-cli": "^6.14.0",
		"babel-core": "^6.14.0",
		"babel-polyfill": "^6.26.0",
		"babel-preset-env": "^1.6.1",
		"babel-preset-stage-0": "^6.5.0",
		"babel-register": "^6.26.0",
		"babel-watch": "^2.0.2",
		"bytes": "^3.0.0",
		"chalk": "^2.3.0",
		"nsp": "^3.1.0",
		"prettyjson": "^1.2.1"
	},
	"dependencies": {
		"bcrypt-nodejs": "^0.0.3",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.15.2",
		"compression": "^1.7.1",
		"cors": "^2.8.4",
		"dotenv": "^5.0.0",
		"express": "^4.14.0",
		"jwt-simple": "^0.5.0",
		"knex": "^0.14.2",
		"lodash": "^4.17.5",
		"moment": "^2.20.1",
		"mongoose": "^5.0.3",
		"morgan": "^1.7.0",
		"nodemon": "^1.10.2",
		"objection": "^1.0.0-rc.12",
		"passport": "^0.4.0",
		"passport-jwt": "^3.0.1",
		"passport-local": "^1.0.0",
		"pg": "^7.4.1",
		"pm2": "^2.9.3",
		"winston": "^2.4.0"
	},
	"scripts": {
		"start": "NODE_ENV=production pm2 start dist/server.babel.js",
		"dev": "npm-run-all security-check dev:src",
		"dev:src": "NODE_ENV=development nodemon src/server.babel.js",
		"prebuild": "npm run clean-dist",
		"build": "NODE_ENV=production babel src -s -D -d dist",
		"migrate": "knex migrate:latest",
		"seed": "knex seed:run",
		"clean-dist": "rm -rf ./dist/*",
		"test": "ava \"src/**/*.test.js\" --verbose",
		"watch:test": "npm test -- --require=babel-register --watch",
		"lint": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
		"fix": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" --fix .",
		"lint:watch": "npm run lint -- --watch",
		"security-check": "nsp check"
	}
}
